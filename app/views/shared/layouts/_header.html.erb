<header role="banner">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Athletes Den", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="nav-item active"><%= link_to 'Home', root_path, class: 'nav-link' %>
            <span class="sr-only">(current)</span>
          </li>
          <% if !user_signed_in? %>
            <li class="nav-item"><%= link_to('Sign in', new_user_session_path, class: 'nav-link') %></li>
            <li class="nav-item"><%= link_to('Sign up', new_user_registration_path, class: 'nav-link') %></li>
          <% else %>
            <li class="navbar-link"><%= link_to('My Lounge', user_exercises_path(current_user)) %></li>
            <li class="nav-item"><%= link_to('Sign out', destroy_user_session_path, { method: :delete, class: 'nav-link' }) %></li>
          <% end %>
        </ul>
        <%= form_tag(search_dashboard_path, class: 'navbar-form navbar-left', role: 'search') do %>
          <div class="form-group">
          <%= text_field_tag(:search_name, nil, placeholder: 'Search for friend', class: 'form-control') %>
          </div>
          <%= submit_tag('Search', class: 'btn btn-default') %>
        <% end %>
        <div class="navbar-right">
          <span class="navbar-text"><%= "You are signed in as: #{current_user.email}" if user_signed_in? %></span>
        </div>
      </div>
    </div>
  </nav>
</header>
