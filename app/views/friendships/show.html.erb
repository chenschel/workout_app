<div class="col-md-8">
  <p id="notice">
    <%= notice %>
  </p>
  <h1><%= @friend.full_name %>'s Exercises</h1>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Duration (min)</th>
      <th>Workout</th>
      <th>Activity data</th>
    </tr>
    </thead>
    <tbody>
    <% @exercises.each do |exericise| %>
    <tr>
      <td><%= exericise.duration_in_min %></td>
      <td><%= truncate(exericise.workout, length: 100) %></td>
      <td><%= exericise.workout_date %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <%= content_tag(:div, "", id: 'chart', data: {workouts: @exercises}) %>
  <br>
  <%= link_to('Back', user_exercises_path(current_user), class: 'btn btn-primary link') %>
</div>
