<div class="container">
  <div class="row search-result">
    <% @athletes.each do |athlete| %>
      <div class="col-md-10 col-md-offset-1 well member">
        <%= athlete.full_name %>
        <% if current_user %>
          <%= link_to('Follow',
                      friendships_path(friend_id: athlete),
                      method: :post,
                      class: 'btn btn-primary pull-right') %>
        <% end %>
      </div>
    <% end %>
    <div class="col-md-10">
      <%= will_paginate(@athletes, renderer: BootstrapPagination::Rails) %>
    </div>
  </div>
</div>
